  "field_explanations": {
    "required_fields": [
      "code: Unique offer code (3-20 characters, uppercase)",
      "title: Offer title (3-100 characters)",
      "discountType: 'flat' or 'percent'",
      "discountValue: Discount amount/percentage (positive number)",
      "expiryDate: Must be future date (ISO format)",
      "hotelId: Format HTL-YYYY-NNNNN"
    ],

    "optional_fields": [
      "description: Offer description (max 500 characters)",
      "minOrderValue: Minimum order value (default: 0)",
      "maxDiscountAmount: Maximum discount cap (for percent discounts)",
      "usageLimit: Total usage limit for offer",
      "userUsageLimit: Per-user usage limit (default: 1)",
      "startDate: Offer start date (default: current date)",
      "isActive: Enable/disable offer (default: true)",
      "applicableFor: 'all', 'hotel', 'branch', 'category', 'item' (default: 'hotel')",
      "branchId: Required if applicableFor is 'branch' (Format: BRN-XXX-NNNNN)",
      "hotel: MongoDB ObjectId or Hotel ID string",
      "branch: MongoDB ObjectId or Branch ID string",
      "foodCategory: MongoDB ObjectId (required if applicableFor is 'category')",
      "foodItem: MongoDB ObjectId (required if applicableFor is 'item')",
      "validDays: Array of day numbers (0=Sunday, 1=Monday, ..., 6=Saturday)",
      "validTimeRange: Single time range with startTime and endTime (HH:MM format)",
      "validTimeSlots: Array of multiple time ranges",
      "terms: Terms and conditions (max 1000 characters)"
    ],

    "validation_notes": [
      "Percentage discounts cannot exceed 100%",
      "Expiry date must be in the future",
      "Hotel ID must exist in database",
      "Branch ID must belong to the specified hotel",
      "Time format must be HH:MM (24-hour format)",
      "Valid days: 0-6 (Sunday to Saturday)",
      "All ObjectIds must be valid 24-character hex strings"
    ]
  }
}
